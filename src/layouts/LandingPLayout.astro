---
import '@fontsource-variable/onest';
import '@fontsource-variable/lexend';
import { getImage } from "astro:assets";
import Header from '../components/Header.astro';
const {title} = Astro.props;
import '../styles/base.css';

import Grain from '../assets/grain.jpg';
const optimizedBackground = await getImage({src: Grain, format: 'webp'});
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body class="box-border	relative w-full min-h-screen px-7 overflow-x-hidden">
		<Header />
		<main class=" max-w-screen-xl w-full mx-auto ">
			<slot />
		</main>
        
		<div style={`background: url(${optimizedBackground.src});`} class="w-full min-h-screen fixed -z-10 top-0 left-0 opacity-5"></div>
	</body>
</html>

