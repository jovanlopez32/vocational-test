---
import '@fontsource-variable/onest';
import '@fontsource-variable/lexend';
import { getImage } from "astro:assets";
import { ViewTransitions } from 'astro:transitions';

import { fade } from 'astro:transitions';
const {title} = Astro.props;
import '../styles/base.css';

import Grain from '../assets/grain.jpg';
const optimizedBackground = await getImage({src: Grain, format: 'webp'});



---

<html lang="en">
	<head >
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title } - Prisma</title>
		<ViewTransitions />
	</head>
	
	<body class="box-border	relative w-full min-h-screen px-7 overflow-x-hidden " transition:animate={fade({ duration: '0.8s' })}>		
		<main class="max-w-screen-xl w-full mx-auto grid place-items-center min-h-screen">
			<slot />
		</main>
		<div style={`background: url(${optimizedBackground.src});`} class="w-full min-h-screen fixed -z-10 top-0 left-0 opacity-10"></div>
	</body>
	
</html>


