---
import Logo from '../assets/logo.png';
---

<!-- header -->
<header class="fixed top-7 left-0 right-0 z-50  max-w-screen-xl  box-border px-7 mx-auto w-full">
    <div class="w-full px-7 py-4 border-2 rounded-full bg-neutral-50/80 saturate-100 backdrop-filter backdrop-contrast-100 backdrop-blur-[8px] bg-clip-padding  border-neutral-600 font-onest flex items-center justify-between">
        <div class="flex gap-2 items-center">
            <!-- <svg xmlns="http://www.w3.org/2000/svg" class="size-10" viewBox="0 0 24 24" ><path d="M11.445 21.832a1 1 0 0 0 1.11 0l9-6A.998.998 0 0 0 21.8 14.4l-9-12c-.377-.504-1.223-.504-1.6 0l-9 12a1 1 0 0 0 .245 1.432l9 6zm8.12-7.078L12 19.798V4.667l7.565 10.087z"></path></svg> -->
            <a class="font-onest font-semibold tracking-wide text-xl title" href="/">    
                <img class="w-24 object-contain" src={Logo.src} alt="Prisma team!"/>            
            </a>
        </div>
        
        <nav class="flex gap-7">	
            <a href="/about-us/about" class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-bottom-right after:scale-x-0 after:bg-neutral-800 after:transition-transform after:duration-300 after:ease-[cubic-bezier(0.65_0.05_0.36_1)] hover:after:origin-bottom-left hover:after:scale-x-100">About</a>
            <a href="/contact-us/contact" class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-bottom-right after:scale-x-0 after:bg-neutral-800 after:transition-transform after:duration-300 after:ease-[cubic-bezier(0.65_0.05_0.36_1)] hover:after:origin-bottom-left hover:after:scale-x-100">Contact Us</a>
        </nav>

        <div>
            <a href="/test-vocacional/registro" class="group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-full bg-neutral-950 px-6 text-neutral-200 text-sm font-bold"><span>START MY TEST</span><div class="absolute inset-0 flex h-full w-full justify-center [transform:skew(-12deg)_translateX(-100%)] group-hover:duration-1000 group-hover:[transform:skew(-12deg)_translateX(100%)]"><div class="relative h-full w-8 bg-white/20"></div></div></a>
        </div>
    </div>
</header>